@model ChilliSoftAssessmentMeetingMinuteTakerDLL.ViewModels.CreateMeetingItemViewModel


<form asp-action="UpdateItem" asp-controller="MeetingItem">
   
    <div id="UpdateItemModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Meeting Item</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Item Name</label>
                        <input asp-for="ItemName" id="UpdateItemName" type="text" class="form-control">
                        <input asp-for="Id" id="UpdateItemId" hidden type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Comment</label>
                        <input asp-for="Comment" id="UpdateComment" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <select asp-for="MeetingId" style="width:90%">
                            @foreach (var item in Model.Meetings)
                            {
                                @if (Model.MeetingId == item.Id)
                                {
                                    <option selected value="@item.Id">@item.MeetingName</option>
                                }
                                else
                                {

                                    <option value="@item.Id">@item.MeetingName</option>
                                }
                               
                            }

                        </select>
                    </div>

                    <div class="form-group">
                        <select asp-for="StatusId" style="width:90%">
                            @foreach (var item in Model.Statuses)
                            {
                                @if (Model.StatusId == item.Id)
                                {
                                    <option selected value="@item.Id">@item.StatusName</option>
                                }
                                else
                                {
                                    
                                <option value="@item.Id">@item.StatusName</option>
                                }
                            }
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button id="CreateMeetingItem" type="submit" class="btn btn-primary">Create MeetUp</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    $("#CreateMeetingItem").click(function () {
        console.log("Created");
    });
</script>